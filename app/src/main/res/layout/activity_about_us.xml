<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".AboutUs"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="152dp"
            android:id="@+id/about_app"
            android:src="@drawable/about_app_text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <ImageView
            android:id="@+id/spaceman_contact"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:contentDescription="@string/aboutUs"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:srcCompat="@drawable/spacedude_contact"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Button
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="22.5dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/github_link"
            android:background="@android:color/transparent"

            />

        <Button
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="22.5dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/linkedin_link"
            android:background="@android:color/transparent"
            />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>